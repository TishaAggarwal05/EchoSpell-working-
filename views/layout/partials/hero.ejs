      <h2 class="hero-tagline">UNLOCK THE MAGIC OF SPEECH!</h2>
      <div class="btn-group">
        <button class="btn btn-ultra-voilet" id="assess">Start Your Quest</button>
        <a class="btn btn-outline-light" href="#features-section">Learn More</a>
      </div>
    </div>
  </section>
  
  <script>
    document.getElementById('assess').addEventListener('click', () => {
      window.location.href = "/signup";
    });
  </script>
  