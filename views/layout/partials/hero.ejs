<!-- Add to <head> -->
    <style>

      body {
    background-blend-mode: overlay;
    background-color: rgba(50, 30, 70, 0.5);
}
    .hero-section {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding-top: 120px;
    }
  
    .hero-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }
  
    .hero-title {
      font-size: 4.5rem;
      font-weight: 700;
      color: #f8f0ff;
      text-shadow: 0 0 10px #b59bff;
      margin-bottom: 0;
    }
    .app-name {
  font-weight: 900;
  letter-spacing: 2px;
  color: #3f0e63; /* Dark royal purple */
  text-shadow:
    0 0 8px rgba(233, 233, 233, 0.973), /* soft lavender glow */
    2px 2px 6px rgba(255, 255, 255, 0.973);   /* dark drop shadow for contrast */
  text-transform: uppercase;
}


    .hero-subtitle {
      font-size: 1.4rem;
      color: #ccc;
      margin-bottom: 0.5rem;
    }
  
    .hero-tagline {
      font-size: 2rem;
      font-weight: bold;
      color: #eee;
      text-shadow: 0 0 5px #8f84e2;
    }

    .btn-group {
  display: flex;
  gap: 1rem; /* adjust the space between buttons */
  justify-content: center;
  margin-top: 1rem;
}

  
    .btn-outline-light,
.btn-ultra-voilet {
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 20px !important;
  line-height: 1.5;
}
.btn-outline-light {
  background: rgba(255, 255, 255, 0.1); /* semi-transparent background */
  backdrop-filter: blur(8px);           /* glass blur effect */
  -webkit-backdrop-filter: blur(8px);   /* Safari support */
  color: #f8f0ff;
  border: 1.5px solid rgba(255, 255, 255, 0.4);
  border-radius: 999px;
  padding: 10px 24px;
  font-size: 16px;
  transition: all 0.3s ease;
  box-shadow: 0 0 8px rgba(140, 120, 255, 0.2);
}
.btn-ultra-voilet:hover {
text-decoration: none;         /* <-- prevents underline on hover too */
color: white; 
}

  </style>
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
