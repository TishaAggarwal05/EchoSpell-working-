<% layout('layout/boilerplate') %>

<style>
  body {
    min-height: 90vh;
    padding-top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Cinzel', serif;
    background-size: cover;
  }

  .glass-box {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1rem 2rem;
    backdrop-filter: blur(12px);
    box-shadow: 0 0 30px rgba(224, 176, 255, 0.3);
    color: white;
    width: 100%;
    max-width: 400px;
    text-align: center;
    font-size: 0.9rem;
  }

  h2 {
    color: #E0B0FF;
    margin-bottom: 0.6rem;
    font-size: 1.8rem;
  }

  label {
    display: block;
    margin-top: 0.7rem;
    font-size: 0.9rem;
    color: #ffffff;
    text-align: left;
  }

  input {
    width: 100%;
    padding: 0.45rem;
    border-radius: 10px;
    border: none;
    margin-top: 0.2rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    outline: none;
    font-size: 0.9rem;
    box-shadow: inset 0 0 4px rgba(224, 176, 255, 0.25);
  }

  input::placeholder {
    color: #ddd;
  }

  button {
    margin-top: 1.2rem;
    padding: 0.6rem 1.2rem;
    background-color: #E0B0FF;
    color: #000;
    border: none;
    border-radius: 12px;
    font-weight: bold;
    cursor: pointer;
    transition: 0.3s ease;
    font-size: 1rem;
    box-shadow: 0 0 10px #E0B0FF;
  }

  button:hover {
    background-color: #ffffff;
    color: #4e007a;
    box-shadow: 0 0 15px #E0B0FF;
  }

  .alert {
    padding: 8px;
    margin-bottom: 10px;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .alert-error {
    background-color: rgba(255, 99, 71, 0.2);
    color: #ff6b6b;
    border: 1px solid #ff6b6b;
  }
  .signup-link {
      margin-top: 1rem;
      display: inline-block;
      color: #E0B0FF;
      text-decoration: underline;
      font-size: 0.9rem;
    }
</style>

<div class="glass-box">
  <h2>Login</h2>

  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-error">
      <%= messages.error[0] %>
    </div>
  <% } %>

  <form action="/login" method="POST">
    <label>Email:</label>
    <input type="email" name="email" required>

    <label>Password:</label>
    <input type="password" name="password" required>

    <button type="submit">Login</button>
    
  </form>
  <a href="/signup" class="signup-link">Don't have an account? Sign Up</a>
</div>
