<% layout('layout/boilerplate') %>
    <div class="container d-flex gap-3 flex-column align-items-center justify-content-center">
        <p style="display:none;" id="unvis-id"><%=id%></p>
        <p style="display:none;" id="is-initial"><%=initial%></p>
        
        <h2>Read this text aloud:</h2>

        <!-- Scrollable text container -->
        <div id="scrollContainer" style="height: 40px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; width: 90%;">
            <% if(initial === true){ %>
                <p id="referenceText">young wizard jumps over the hollow wall by casting a strange spell</p>
            <% } else { %>
                <p style="display:none;" id="unvis-phoneme"><%=phoneme%></p>
                <p id="referenceText"><%= text %></p>
            <% } %>
        </div>

        <div>
            <button id="startBtn" style="border:none;" class="my-3 mx-2 btn btn-ultra-voilet">Start Recording</button>
            <button id="stopBtn" style="border:none;" class="my-3 mx-2 btn btn-ultra-voilet" disabled>Stop Recording</button>
        </div>

        <h3>Recognized Text:</h3>
        <p id="recognizedText"></p>
    </div>

    <script src="https://aka.ms/csspeech/jsbrowserpackageraw"></script>
    <script src="/script.js"></script>
